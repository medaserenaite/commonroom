  @model commonroom.ViewModels.RegistrationViewModel

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <div class="modal-header">
      <span class="close">&times;</span>
    </div>
    <div class="modal-body">
      <form asp-action="Registration" asp-controller="Home" method="POST">
          <span asp-validation-for="FirstName"></span>
          <label asp-for="FirstName">First Name</label><br>
          <input asp-for="FirstName" type="text"><br>

          <span asp-validation-for="LastName"></span>
          <label asp-for="LastName">Last Name</label><br>
          <input asp-for="LastName" type="text"><br>

          <span asp-validation-for="Email"></span>
          <label asp-for="Email">Email</label><br>
          <input asp-for="Email" type="email"><br>

          <span asp-validation-for="Password"></span>
          <label asp-for="Password">Password</label><br>
          <input asp-for="Password" type="password"><br>

          <span asp-validation-for="Confirm"></span>
          <label asp-for="Confirm">Confirm Password</label><br>
          <input asp-for="Confirm" type="password"><br><br>

          <input type="submit" value="submit">
</form>
    </div>
    <div class="modal-footer">
    </div>
  </div>

 