@model commonroom.Models.Country
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv='X-UA-compatible' content="ie=edge">
    <link rel="stylesheet" type="text/css" href="css/home.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
</head>

<style>
    body{
      background-color: black;
    }
    a{
      color:white;
      text-decoration: none;
    }
    #card {
      background-image: url("images/globeicon.png");
      background-repeat: no-repeat;
      width: 300px;
      color: black;
      padding: 16px 32px;
      text-align: center;
      font-size: 16px;
      transition: 0.3s;
      opacity:0.7;
    }
    #cardmid{
      height: 200px;
      background: rgba(0,0,0,0.8);
      border: 5px transparent solid;
      border-radius: 100px;
      transition: 0.3s;
      text-align: center;
    }
    .one{
      margin-top:20px;
    }
    .two{
      margin-top: 30px;
    }
    .three{
      margin-top: 50px;
    }
    #a{
      text-decoration: none;
      color: white;
      font-family: 'Dekko';
      font-size: 40px;
      letter-spacing: 0.8rem;
      text-shadow: 4px 4px 4px #000000;
      opacity: 1;
    }
    h5{
      color: white;
      font-family: 'Dekko';
      
    }
    .card-title{
      font-size: 30px;
    }
    #container{
      padding:50px;
      background: rgba(1,1,1,0.3);
      width: 90%;
      margin: auto;
      height:1000px;
    }
    .col-sm{
    margin:25px;
    }
#card:hover {opacity: 1}
</style>

<partial name="_NavBarPartial" />

<body>
  <br><br>
    <div id="container">
        <div class="row">
            <div class="col-sm" id="col-sm">
                <div id="card">
                    <a id="a" href="ChooseCountry">
                        <div id="cardmid" class="card" style="width: 18rem;">
                            <div class="card-body">
                                <div class="one">
                                    <h5 class="card-title">CREATE<br>A<br>TRIP</h5>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-sm">
                <div id="card">
                    <a id="a" href="MyTrips">
                        <div id="cardmid" class="card" style="width: 18rem;">
                            <div class="card-body">
                                <div class="two">
                                    <h5 class="card-title">YOUR TRIPS</h5>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-sm">
                <div id="card">
                    <a id="a" href="AllTrips">
                        <div id="cardmid" class="card" style="width: 18rem;">
                            <div class="card-body">
                                <div class="three">
                                    <h5 class="card-title">EXPLORE</h5>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

