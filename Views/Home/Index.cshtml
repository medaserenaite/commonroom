@model commonroom.ViewModels.LoginViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv='X-UA-compatible' content="ie=edge">
    <link rel="stylesheet" type="text/css" href="css/index.css">
    <script type="text/javascript" src="js/index.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
        crossorigin="anonymous">
    
    
        
    <title>commonroom</title>
</head>

<style>
#polina #submit{
    width: 300px;

}
#submit:hover{
    background: rgba(255,255,255,0.5);
}
.toreg{
    max-width: 300px;
    margin:auto;
}
</style>



<body>
    <video poster="" id="bgvid" playsinline autoplay muted loop>
        <!-- 
      - Video needs to be muted, since Chrome 66+ will not autoplay video with sound.
      WCAG general accessibility recommendation is that media such as background video play through only once. Loop turned on for the purposes of illustration; if removed, the end of the video will fade in the same way created by pressing the "Pause" button  -->
      <source src="videos/pexels.mp4" type="video/webm">
      <source src="videos/pexels.mp4" type="video/mp4">
      
      </video>
      <div id="polina">
      <h1>commonroom</h1>
      <br><br>
      <div id="form">
        <form asp-action="Login" asp-controller="Home" method="POST">

        <label asp-for="LoginEmail">Email</label><br>
        <span asp-validation-for="LoginEmail"></span>
        <input asp-for="LoginEmail" type="email"><br>

        <label asp-for="LoginPassword">Password</label><br>
        <span asp-validation-for="LoginPassword"></span>
        <input asp-for="LoginPassword" type="password"><br>
        <br>
        <input id="submit" class="submit" type="submit" value="submit">   
    </form>
      </div>
      Need an account? 
    <a class="toreg" href="/createanaccount">Register</a>

      </div>
</div>
</body>
</html>



